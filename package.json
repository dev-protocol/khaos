{
	"name": "khaos",
	"private": true,
	"version": "1.0.0",
	"description": "Template repository for using TypeScript",
	"scripts": {
		"test": "ava",
		"build": "tsc",
		"watch": "tsc -w",
		"prestart": "yarn build",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"start": "func start",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"@azure/cosmos": "3.11.5",
		"@azure/functions": "1.2.3",
		"@devprotocol/khaos-core": "1.4.0",
		"@devprotocol/khaos-functions": "0.3.6",
		"@devprotocol/util-ts": "2.2.1",
		"bent": "7.3.12",
		"discord-webhook-ts": "3.0.3",
		"ethers": "5.0.32",
		"jsonwebtoken": "8.5.1",
		"ramda": "0.27.1",
		"web3": "1.4.0"
	},
	"devDependencies": {
		"@ava/typescript": "1.1.1",
		"@types/bent": "7.3.2",
		"@types/dotenv": "8.2.0",
		"@types/jsonwebtoken": "8.5.2",
		"@types/node": "14.17.4",
		"@types/ramda": "0.27.42",
		"@types/sinon": "10.0.2",
		"@typescript-eslint/eslint-plugin": "4.28.1",
		"@typescript-eslint/parser": "4.28.1",
		"ava": "3.15.0",
		"dotenv": "10.0.0",
		"eslint": "7.29.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-functional": "3.1.0",
		"husky": "7.0.0",
		"prettier": "2.3.2",
		"rimraf": "3.0.2",
		"sinon": "11.1.1",
		"typescript": "4.3.5"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/template-repos-ts.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/template-repos-ts/issues"
	},
	"homepage": "https://github.com/dev-protocol/template-repos-ts#readme"
}
