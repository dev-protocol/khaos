{
	"name": "template-repos-ts",
	"version": "1.0.0",
	"description": "Template repository for using TypeScript",
	"main": "index.js",
	"scripts": {
		"test": "ava",
		"build": "tsc",
		"watch": "tsc -w",
		"prestart": "yarn build",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"start": "func start",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{js,json,md,yml}'"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"@azure/functions": "^1.2.0",
		"bent": "^7.3.0",
		"ramda": "^0.27.0",
		"web3": "^1.2.7"
	},
	"devDependencies": {
		"@ava/typescript": "1.1.1",
		"@types/bent": "7.0.2",
		"@types/dotenv": "8.2.0",
		"@types/ramda": "0.27.4",
		"@types/sinon": "^9.0.0",
		"@typescript-eslint/eslint-plugin": "2.30.0",
		"@typescript-eslint/parser": "2.30.0",
		"ava": "3.8.1",
		"dotenv": "8.2.0",
		"eslint": "6.8.0",
		"eslint-config-prettier": "6.11.0",
		"eslint-plugin-functional": "3.0.1",
		"eslint-plugin-prettier": "3.1.3",
		"husky": "4.2.5",
		"prettier": "2.0.5",
		"rimraf": "^3.0.2",
		"sinon": "^9.0.2",
		"typescript": "3.8.3"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			}
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/template-repos-ts.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/template-repos-ts/issues"
	},
	"homepage": "https://github.com/dev-protocol/template-repos-ts#readme"
}
