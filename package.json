{
	"name": "khaos",
	"private": true,
	"version": "1.0.0",
	"description": "Template repository for using TypeScript",
	"scripts": {
		"test": "ava",
		"build": "tsc",
		"watch": "tsc -w",
		"prestart": "yarn build",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"start": "func start",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"@azure/cosmos": "3.15.0",
		"@azure/functions": "3.0.0",
		"@devprotocol/khaos-core": "1.6.0",
		"@devprotocol/khaos-functions": "0.4.2",
		"@devprotocol/util-ts": "2.2.1",
		"bent": "7.3.12",
		"discord-webhook-ts": "3.0.3",
		"ethers": "5.5.3",
		"jsonwebtoken": "8.5.1",
		"ramda": "0.28.0",
		"web3": "1.6.1"
	},
	"devDependencies": {
		"@ava/typescript": "2.0.0",
		"@types/bent": "7.3.2",
		"@types/dotenv": "8.2.0",
		"@types/jsonwebtoken": "8.5.7",
		"@types/node": "16.11.19",
		"@types/ramda": "0.27.64",
		"@types/sinon": "10.0.6",
		"@typescript-eslint/eslint-plugin": "5.9.1",
		"@typescript-eslint/parser": "5.9.1",
		"ava": "3.15.0",
		"dotenv": "14.1.0",
		"eslint": "8.7.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-functional": "4.1.1",
		"husky": "7.0.4",
		"prettier": "2.5.1",
		"rimraf": "3.0.2",
		"sinon": "12.0.1",
		"typescript": "4.5.4"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			},
			"compile": false
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/template-repos-ts.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/template-repos-ts/issues"
	},
	"homepage": "https://github.com/dev-protocol/template-repos-ts#readme"
}
