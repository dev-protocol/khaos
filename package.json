{
	"name": "khaos",
	"private": true,
	"version": "1.0.0",
	"description": "Template repository for using TypeScript",
	"scripts": {
		"test": "ava",
		"build": "tsc",
		"watch": "tsc -w",
		"prestart": "yarn build",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"start": "func start",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"@azure/cosmos": "3.9.3",
		"@azure/functions": "1.2.2",
		"@devprotocol/util-ts": "^1.4.0",
		"bent": "7.3.12",
		"discord-webhook-ts": "3.0.3",
		"ethers": "5.0.24",
		"jsonwebtoken": "8.5.1",
		"ramda": "0.27.1",
		"web3": "1.3.0"
	},
	"devDependencies": {
		"@ava/typescript": "1.1.1",
		"@types/bent": "7.3.2",
		"@types/dotenv": "8.2.0",
		"@types/jsonwebtoken": "8.5.0",
		"@types/node": "13.13.5",
		"@types/ramda": "0.27.32",
		"@types/sinon": "9.0.9",
		"@typescript-eslint/eslint-plugin": "4.9.1",
		"@typescript-eslint/parser": "4.9.1",
		"ava": "3.14.0",
		"dotenv": "8.2.0",
		"eslint": "7.15.0",
		"eslint-config-prettier": "6.15.0",
		"eslint-plugin-functional": "3.1.0",
		"husky": "4.3.6",
		"prettier": "2.2.1",
		"rimraf": "3.0.2",
		"sinon": "9.2.2",
		"typescript": "4.1.3"
	},
	"workspaces": [
		"functions/*"
	],
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			}
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/template-repos-ts.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/template-repos-ts/issues"
	},
	"homepage": "https://github.com/dev-protocol/template-repos-ts#readme"
}
